# 'notify-host-by-email-herald' command definition
define command{
  command_name  notify-host-by-email-herald
  command_line /usr/local/nagios-herald/bin/nagios-herald --message-type email --formatter=$_HOSTMESSAGE_FORMATTER_NAME$ --nagios-cgi-url=<%= @nagios_cgi %> --reply-to=<%= @replyto %> 
}

# 'notify-service-by-email-herald' command definition
define command{
  command_name  notify-service-by-email-herald
  command_line  /usr/local/nagios-herald/bin/nagios-herald --message-type email --formatter=$_SERVICEMESSAGE_FORMATTER_NAME$ --nagios-cgi-url=<%= @nagios_cgi %> --reply-to=<%= @replyto %> --formatter-dir=<%= @formatterdir %>
}
